<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/examsFrameLayout"
    tools:context="running.java.mendelu.cz.bakalarskapraca.ResultsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/noExams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_below="@id/noExamImage"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="Neprebehli žiadne skúšky"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionBar.Subtitle"
            android:textSize="15sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/noExamImage"
            android:visibility="gone"
            android:src="@drawable/book"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</FrameLayout>
